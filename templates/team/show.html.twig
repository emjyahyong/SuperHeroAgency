{# templates/team/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Équipe {{ team.name }}{% endblock %}

{% block body %}
    <h1>Équipe : {{ team.name }}</h1>

    <p><strong>Leader :</strong> {{ team.leader ? team.leader.name : 'Aucun leader' }}</p>

    <p><strong>Membres :</strong></p>
    <ul>
        {% for member in team.members %}
            <li>{{ member.name }}</li>
        {% endfor %}
    </ul>

    <p><strong>Active :</strong> {{ team.active ? 'Oui' : 'Non' }}</p>

    <a href="{{ path('app_team_edit', {id: team.id}) }}" class="btn btn-warning">Modifier</a>
    <a href="{{ path('app_team_index') }}" class="btn btn-primary">Retour à la liste</a>
{% endblock %}
